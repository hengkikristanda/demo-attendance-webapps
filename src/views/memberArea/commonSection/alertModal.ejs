<!-- Modal -->
<div
	id="modal"
	class="fixed z-50 inset-0 hidden bg-gray-900 bg-opacity-75 flex items-center justify-center py-8">
	<div
		class="flex flex-col gap-2 item-center bg-white rounded-lg shadow-lg p-6 mx-40 w-72 max-h-full overflow-y-scroll">
		<div id="modal-content" class="flex flex-col gap-12">
			<div class="flex flex-col">
				<h5 class="font-bold text-primary text-center">
					Are you sure you want to delete this item?
				</h5>
				<p class="text-center">You cannot undo this action</p>
			</div>
		</div>
		<div class="modal-action flex flex-row justify-center gap-20">
			<a id="closeAlert" href="#" class="text-link primary">Cancel</a>
			<a id="confirmAlert" href="#" class="text-link danger-bold">Delete</a>
		</div>
	</div>
</div>
<script>
	function openModal(index, targetHref) {
		const modal = document.getElementById("modal");
		modal.classList.remove("hidden");

		const confirmAlert = modal.querySelector("#confirmAlert");
		confirmAlert.setAttribute("href", targetHref);
	}

	function closeModal() {
		document.getElementById("modal").classList.add("hidden");
	}

	const closeAlert = document.getElementById("closeAlert");
	closeAlert.addEventListener("mouseup", closeModal);
</script>
