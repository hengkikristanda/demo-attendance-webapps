<!-- Sidebar -->
<div class="sidebar z-50 -translate-x-full md:translate-x-0 ">
  <!-- Logo -->
  <a href="#" class="logo">
    <!-- <svg class="w-8 h-8" viewBox="0 0 20 20" fill="currentColor"> -->
    <!-- SVG content here -->
    <!-- </svg> -->
    <h3 class="font-extrabold">STTD</h3>
    <p>Absensi</p>
  </a>
  <!-- Navigation -->
  <nav>
    <% sidebar.forEach(function(sideBarMenu) { 
  
    %>
    <p class="group-menu"><%= sideBarMenu.groupMenu %></p>
    <%
      sideBarMenu.item.forEach(function(item) {                 
      %>
    <a href=<%= item.href %> class="<%= item.id.toLowerCase() === id.toLowerCase() ? 'active' : 'inactive' %>">
      <h5 class="bi <%= item.bsClass %>"></h5>
      <%= item.label %>
    </a>
    <% }); %>
  <% }); %>
  </nav>
</div>

<!-- Overlay to close sidebar on mobile -->
<div class="overlay absolute inset-0 bg-black bg-opacity-50 hidden"></div>