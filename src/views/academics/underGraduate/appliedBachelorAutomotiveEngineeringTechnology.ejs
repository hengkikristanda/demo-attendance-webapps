<!DOCTYPE html>
<html lang="en">
	<%- include('../../sections/head') %>

	<body>
		<%- include('../../sections/navbar') %>
		<div class="max-w-screen-2xl mx-auto">
			<div class="page-header w-full my-20">
				<div class="w-full h-[30rem] relative">
					<img src="/img/postgraduate.JPG" alt="" class="w-full h-full object-cover object-top" />
					<div class="absolute w-full h-full bottom-0 bg-gray-800/50"></div>
					<h1
						class="font-bold text-white sm:text-2xl px-2 md:px-12 w-full md:max-w-[50rem] absolute bottom-1/4 md:bottom-3/4 z-10 uppercase">
						<%=currentPage%>
					</h1>
					<div class="bg-tertiary absolute size-28 hidden md:flex bottom-2/3 z-0"></div>
				</div>
			</div>

			<section>
				<div class="flex flex-col w-full gap-16">
					<div class="flex justify-evenly border-b border-gray-300">
						<h6
							class="nav-btn cursor-pointer w-1/3 py-4 text-center hover-effect bg-tertiary/30 font-semibold">
							<%=studyTranslation.sectionOverview.label%>
						</h6>
						<h6 class="nav-btn cursor-pointer w-1/3 py-4 text-center hover-effect font-semibold">
							<%=studyTranslation.sectionStudentActivities.label%>
						</h6>
						<h6 class="nav-btn cursor-pointer w-1/3 py-4 text-center hover-effect font-semibold">
							<%=studyTranslation.sectionCareerImpact.label%>
						</h6>
					</div>
					<div id="overview" class="nav-btn_content flex flex-col w-full gap-16 reveal fade-right">
						<div class="flex">
							<div class="flex flex-col w-2/5 px-2">
								<h1 class="text-secondary font-bold">
									<%=studyTranslation.sectionOverview.studyPlan.label%>
								</h1>
								<hr class="h-2 w-1/4 bg-tertiary" />
							</div>
							<div class="flex justify-evenly py-4 bg-tertiary/10 w-full">
								<div class="flex flex-col border-r-2 border-white w-1/3 py-8 px-8">
									<h3 class="text-tertiary font-bold">
										<%=studyTranslation.sectionOverview.studyPlan.content[0].label%>
									</h3>
									<p><%=studyTranslation.sectionOverview.studyPlan.content[0].value%></p>
								</div>
								<div class="flex flex-col border-r-2 border-white w-1/3 py-8 px-8">
									<h3 class="text-tertiary font-bold">
										<%=studyTranslation.sectionOverview.studyPlan.content[1].label%>
									</h3>
									<p><%=studyTranslation.sectionOverview.studyPlan.content[1].value%></p>
								</div>
								<div class="flex flex-col border-r-2 border-white w-1/3 py-8 px-8">
									<a href="/study/marketing_innovation_technology_accreditation.pdf" target="_blank" class="text-tertiary font-bold text-2xl p-0 m-0 underline">
										<%=studyTranslation.sectionOverview.studyPlan.content[2].label%>
                                    </a>
									<p><%=studyTranslation.sectionOverview.studyPlan.content[2].value%></p>
								</div>
							</div>
						</div>
						<div class="flex gap-12">
							<div class="flex flex-col w-1/2 my-12 px-2 gap-4">
								<h3 class="font-bold uppercase text-tertiary">
									<%=studyTranslation.sectionOverview.title%>
								</h3>
								<p class="text-secondary"><%=studyTranslation.sectionOverview.paragraph%></p>
							</div>
							<div
								class="w-1/2 h-96 border border-tertiary/10 shadow-tertiary/10 shadow-2xl drop-shadow-lg">
								<img src="/img/lab_pengujian_kendaraan.JPG" class="w-full h-full object-cover" />
							</div>
						</div>
					</div>
					<div
						id="studentActivity"
						class="nav-btn_content flex flex-col w-full gap-16 hidden reveal fade-right">
						<div class="flex flex-col-reverse md:flex-row md:items-start gap-12">
							<div class="flex flex-col md:w-1/2 my-12 md:my-0 px-2 gap-4">
								<h3 class="font-bold uppercase text-tertiary">
									<%=studyTranslation.sectionStudentActivities.title%>
								</h3>
								<p class="text-secondary">
									<%=studyTranslation.sectionStudentActivities.paragraph%>
								</p>
							</div>
							<div
								class="md:w-1/2 h-96 border border-tertiary/10 shadow-tertiary/10 shadow-2xl drop-shadow-lg">
								<img src="/img/student_activity.jpg" class="w-full h-full object-cover" />
							</div>
						</div>
					</div>
					<div
						id="careerImpact"
						class="nav-btn_content flex flex-col w-full gap-16 hidden reveal fade-right">
						<div class="flex flex-col-reverse md:flex-row md:items-start gap-12">
							<div class="flex flex-col md:w-1/2 my-12 md:my-0 px-2 gap-4">
								<h3 class="font-bold uppercase text-tertiary">
									<%=studyTranslation.sectionCareerImpact.title%>
								</h3>
								<p class="text-secondary"><%=studyTranslation.sectionCareerImpact.paragraph%></p>
							</div>
							<div
								class="md:w-1/2 h-96 border border-tertiary/10 shadow-tertiary/10 shadow-2xl drop-shadow-lg">
								<img src="/img/DRZ02844.jpg" class="w-full h-full object-cover" />
							</div>
						</div>
					</div>
				</div>
			</section>

			<%- include('../../sections/footer') %> <%- include('../../components/chatWidget') %>
		</div>
	</body>
	<script src="/js/navbarUtils.js"></script>
	<script>
		document.addEventListener("DOMContentLoaded", () => {
			function reveal() {
				var reveals = document.querySelectorAll(".reveal");

				for (var i = 0; i < reveals.length; i++) {
					var windowHeight = window.innerHeight;
					var elementTop = reveals[i].getBoundingClientRect().top;
					var elementVisible = 150;

					if (elementTop < windowHeight - elementVisible) {
						reveals[i].classList.add("active");
					} /* else {
                    reveals[i].classList.remove("active");
                } */
				}
			}

			window.addEventListener("scroll", reveal);
		});

		const navBtn = document.querySelectorAll(".nav-btn ");
		navBtn.forEach((btn, index) => {
			btn.addEventListener("mouseup", () => {
				const targetContent = document.querySelectorAll(".nav-btn_content");

				targetContent.forEach((content, idx) => {
					if (index == idx) {
						content.classList.remove("hidden");
					} else {
						content.classList.add("hidden");
					}
				});

				navBtn.forEach((btn, idx) => {
					if (index == idx) {
						btn.classList.add("bg-tertiary/30");
					} else {
						btn.classList.remove("bg-tertiary/30");
					}
				});
			});
		});
	</script>
</html>
