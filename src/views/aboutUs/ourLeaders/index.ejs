<!DOCTYPE html>
<html lang="en">
	<%- include('../../sections/head') %>

	<body>
		<%- include('../../sections/navbar') %>

		<div class="max-w-screen-2xl mx-auto">
			<%- include('./ourLeadersHero') %>

			<div class="flex flex-col w-full mb-20 items-center relative gap-2">
				<h1 class="font-bold md:text-6xl bg-white px-4 text-tertiary">
					<%=ourLeadersHeroTitle.ourLeadersHero%>
				</h1>
				<hr class="h-2 w-20 bg-tertiary" />
			</div>

			<div class="flex flex-col">
				<% const ourLeadersList = locals.ourLeadersList; %>
				<div class="flex w-full">
					<div class="flex flex-col justify-center items-center gap-8 mb-12 w-full">
						<div class="size-60">
							<img
								src="<%=ourLeadersList[0].imageUrl%>"
								alt=""
								class="w-full h-full object-cover rounded-full shadow-lg mx-auto object-top" />
						</div>
						<div class="flex flex-col justify-center items-center">
							<hr class="h-1 w-20 bg-tertiary mb-4" />
							<h3 class="font-bold"><%=ourLeadersList[0].fullName%></h3>
							<h6><%=ourLeadersList[0].job%></h6>
						</div>
					</div>
				</div>
				<div class="flex flex-col lg:flex-row w-full">
					<% for (let n=1; n<4; n++) { %>
					<div class="flex flex-col justify-center items-center gap-8 mb-12 w-full lg:w-1/3">
						<div class="size-60">
							<img
								src="<%=ourLeadersList[n].imageUrl%>"
								alt=""
								class="w-full h-full object-cover rounded-full shadow-lg mx-auto object-top" />
						</div>
						<div class="flex flex-col justify-center items-center">
							<hr class="h-1 w-20 bg-tertiary mb-4" />
							<h3 class="font-bold"><%=ourLeadersList[n].fullName%></h3>
							<h6><%=ourLeadersList[n].job%></h6>
						</div>
					</div>
					<% } %>
				</div>
				<div class="flex flex-col lg:flex-row w-full">
					<% for (let n=4; n<6; n++) { %>
					<div class="flex flex-col justify-center items-center gap-8 mb-12 w-full md:w-1/2">
						<div class="size-60">
							<img
								src="<%=ourLeadersList[n].imageUrl%>"
								alt=""
								class="w-full h-full object-cover rounded-full shadow-lg mx-auto object-top" />
						</div>
						<div class="flex flex-col justify-center items-center">
							<hr class="h-1 w-20 bg-tertiary mb-4" />
							<h3 class="font-bold"><%=ourLeadersList[n].fullName%></h3>
							<h6><%=ourLeadersList[n].job%></h6>
						</div>
					</div>
					<% } %>
				</div>
			</div>
		</div>

		<%- include('../../sections/footer') %>
		<%- include('../../components/chatWidget') %>
	</body>

	<script src="/js/navbarUtils.js"></script>
	<script src="/js/onLoad.js"></script>
</html>
