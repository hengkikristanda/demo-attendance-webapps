<!DOCTYPE html>
<html lang="en">
	<%- include('../commonSection/header') %>

	<body>
		<div class="login-container">
			<form class="myform" id="loginForm" action="/users/login" method="POST">
				<div class="login-box border-b-0">
					<div class="img-container">
						<img src="/img/logo-removebg-preview.png" />
						<h1>Welcome</h1>
					</div>
					<% if (alertMessage) { %>
					<p class="alert-badge <%=alertMessage.className%>"><%= alertMessage.message %></p>
					<% } %>
					<div class="input-group__icon">
						<input
							id="inputUserName"
							type="text"
							placeholder="Username"
							name="userName"
							maxlength="50"
							required />
					</div>
					<div class="input-group__icon">
						<input
							id="inputPassword"
							name="password"
							type="password"
							placeholder="Password"
							maxlength="32"
							required
							autocomplete="off" />
						<h6 class="bi bi-eye-slash action-icon hidden"></h6>
					</div>
					<button id="signInButton" type="submit" class="btn success w-full">
						<p>LOGIN</p>
					</button>
					<a href="/users/forgot-password">Forgot Username / Password?</a>
				</div>
			</form>
		</div>
	</body>
	<script src="/js/CommonUtils.js"></script>
	<script src="/js/login-page/index.js"></script>
</html>
