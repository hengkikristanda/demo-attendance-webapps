	<script>
		function handleClick_tabs(index) {
			const tabs = document.querySelectorAll(".tabs-lecturer");
			tabs.forEach((tab, idx) => {
				if (tab.classList.contains("active")) {
					tab.classList.remove("active");
				}
				if (index == idx) {
					tab.classList.add("active");
				}
			});

			const tabsContent = document.querySelectorAll(".tabs-content");

			tabsContent.forEach((tabContent) => {
				if (!tabContent.classList.contains("hide")) {
					tabContent.classList.add("hide");
					tabContent.classList.remove("show");
				}
			});

			tabsContent[index].classList.remove("hide");
			tabsContent[index].classList.add("show");
		}

		const tabs = document.querySelectorAll(".tabs-lecturer");
		tabs.forEach((tab, index) => {
			tab.addEventListener("mouseup", () => handleClick_tabs(index));
		});
	</script>
