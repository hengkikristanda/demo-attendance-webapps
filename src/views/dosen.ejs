	<script>
		function handleClick_tabs(index) {
			const targetTabs = event.target;
			targetTabs.classList.remove("border-tertiary");
			targetTabs.classList.add("border-white");

			const tabs = document.querySelectorAll(".tabs h6");
			tabs.forEach((tab) => {
				if (tab.classList.contains("border-tertiary")) {
					tab.classList.remove("border-tertiary");
					tab.classList.add("border-white");
				}
			});
			tabs[index].classList.remove("border-white");
			tabs[index].classList.add("border-tertiary");

			const tabsContent = document.querySelectorAll(".tabs-content");

			tabsContent.forEach((tabContent) => {
				if (!tabContent.classList.contains("hide")) {
					tabContent.classList.add("hide");
					tabContent.classList.remove("show");
				}
			});

			tabsContent[index].classList.remove("hide");
			tabsContent[index].classList.add("show");
		}

		const tabs = document.querySelectorAll(".tabs h6");
		tabs.forEach((tab, index) => {
			tab.addEventListener("mouseup", () => handleClick_tabs(index));
		});
	</script>
