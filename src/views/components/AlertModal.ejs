<dialog id="alertModal" class="modal rounded-xl">
  <div class="modal-box p-0 text-center w-full max-w-sm flex flex-col shadow-md rounded-md">
    <div class="flex flex-col py-6 px-2 items-center">
      <h1 class="bi bi-exclamation-circle-fill text-danger text-6xl mb-8"></h1>
      <h3 class="font-bold text-lg text-gray-700 mb-4">${modalAlert.message}</h3>
      <p class="my-4 break-words font-bold hidden mb-4">${itemName}</p>
      <p class="font-bold text-danger">${modalAlert.info}</p>
    </div>
    <form id="deleteConfirmationForm" method="dialog">
      <div id="modalButtonContainer" class=" flex justify-between w-full border-t border-gray-300">
        <button id="confirmDelete_${itemId}" class="text-gray-500 font-semibold text-center w-1/2 py-4 h-fit cursor-pointer hover:bg-gray-100">
          ${modalAlert.CANCEL}
        </button>
        <button class="text-base border-0 outline-0 font-semibold text-center w-1/2 border-r border-gray-300 py-4 h-fit bg-danger text-white hover:bg-red-900">
          ${modalAlert.OK}
        </button>
      </div>
    </form>
  </div>
</dialog>