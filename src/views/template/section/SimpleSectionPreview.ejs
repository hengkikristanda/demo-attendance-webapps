	<div class="flex gap-12">
		<div class="flex flex-col w-1/2 my-12 px-2 gap-4">
			<h3 class="placeholder-input font-bold uppercase text-tertiary">
				<%
					if (existingSectionData.heading) {
					%>
						<%=existingSectionData.heading%>
					<%
					} else {
					%>
						Placeholder Section Heading - Simple Basic
					<%
					}
				%>
			</h3>
