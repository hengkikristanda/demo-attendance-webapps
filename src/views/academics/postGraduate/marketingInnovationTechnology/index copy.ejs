									<%=studyTranslation.sectionOverview.studyPlan.label%>
								</h1>
								<hr class="h-2 w-1/4 bg-tertiary" />
							</div>
							<div class="flex justify-evenly py-4 bg-tertiary/10 w-full">
								<div class="flex flex-col border-r-2 border-white w-1/3 py-8 px-8">
									<h3 class="text-tertiary font-bold">
										<%=studyTranslation.sectionOverview.studyPlan.content[0].label%>
									</h3>
									<p><%=studyProgramData.duration%></p>
								</div>
								<div class="flex flex-col border-r-2 border-white w-1/3 py-8 px-8">
									<h3 class="text-tertiary font-bold">
										<%=studyTranslation.sectionOverview.studyPlan.content[1].label%>
									</h3>
									<p><%=studyProgramData.degree%></p>
								</div>
								<div class="flex flex-col border-r-2 border-white w-1/3 py-8 px-8">
									<a
										href="/docs/postgraduate/accreditations/8f417060-440d-4481-a871-18ca7766c28c.pdf"
										target="_blank"
										class="text-tertiary font-bold text-2xl p-0 m-0 underline">
										<%=studyTranslation.sectionOverview.studyPlan.content[2].label%>
									</a>
									<p><%=studyProgramData.accreditation%></p>
								</div>
							</div>
						</div>
						<div class="flex gap-12">
							<div class="flex flex-col w-1/2 my-12 px-2 gap-4">
								<h3 class="font-bold uppercase text-tertiary">
									<%=sectionData["OVERVIEW"].title%>
								</h3>
								<p class="text-secondary"><%=sectionData["OVERVIEW"].content%></p>
							</div>
							<div
								class="w-1/2 h-96 border border-tertiary/10 shadow-tertiary/10 shadow-2xl drop-shadow-lg">
								<img
									src="<%=sectionData['OVERVIEW'].imageUrl%>"
									class="w-full h-full object-cover" />
							</div>
						</div>
					</div>
					<div
						id="studentActivity"
						class="nav-btn_content flex flex-col w-full gap-16 hidden reveal fade-right">
						<div class="flex flex-col-reverse md:flex-row md:items-start gap-12">
							<div class="flex flex-col md:w-1/2 my-12 md:my-0 px-2 gap-4">
								<h3 class="font-bold uppercase text-tertiary">
									<%=sectionData["STUDENT ACTIVITIES"].title%>
								</h3>
								<p class="text-secondary"><%=sectionData["STUDENT ACTIVITIES"].content%></p>
							</div>
							<div
								class="md:w-1/2 h-96 border border-tertiary/10 shadow-tertiary/10 shadow-2xl drop-shadow-lg">
								<img
									src="<%=sectionData['STUDENT ACTIVITIES'].imageUrl%>"
									class="w-full h-full object-cover" />
							</div>
						</div>
					</div>
					<div
						id="careerImpact"
						class="nav-btn_content flex flex-col w-full gap-16 hidden reveal fade-right">
						<div class="flex flex-col-reverse md:flex-row md:items-start gap-12">
							<div class="flex flex-col md:w-1/2 my-12 md:my-0 px-2 gap-4">
								<h3 class="font-bold uppercase text-tertiary">
									<%=sectionData["CAREER IMPACT"].title%>
								</h3>
								<p class="text-secondary"><%=sectionData["CAREER IMPACT"].content%></p>
							</div>
							<div
								class="md:w-1/2 h-96 border border-tertiary/10 shadow-tertiary/10 shadow-2xl drop-shadow-lg">
								<img
									src="<%=sectionData['CAREER IMPACT'].imageUrl%>"
									class="w-full h-full object-cover" />
							</div>
						</div>
					</div>
				</div>
			</section>

			<%- include('../../sections/footer') %> <%- include('../../components/chatWidget') %>
		</div>
	</body>
	<script src="/js/navbarUtils.js"></script>
	<script>
		document.addEventListener("DOMContentLoaded", () => {
			function reveal() {
				var reveals = document.querySelectorAll(".reveal");

				for (var i = 0; i < reveals.length; i++) {
					var windowHeight = window.innerHeight;
					var elementTop = reveals[i].getBoundingClientRect().top;
					var elementVisible = 150;

					if (elementTop < windowHeight - elementVisible) {
						reveals[i].classList.add("active");
					} /* else {
                    reveals[i].classList.remove("active");
                } */
				}
			}

			window.addEventListener("scroll", reveal);
		});

		const navBtn = document.querySelectorAll(".nav-btn ");
		navBtn.forEach((btn, index) => {
			btn.addEventListener("mouseup", () => {
				const targetContent = document.querySelectorAll(".nav-btn_content");

				targetContent.forEach((content, idx) => {
					if (index == idx) {
						content.classList.remove("hidden");
					} else {
						content.classList.add("hidden");
					}
				});

				navBtn.forEach((btn, idx) => {
					if (index == idx) {
						btn.classList.add("bg-tertiary/30");
					} else {
						btn.classList.remove("bg-tertiary/30");
					}
				});
			});
		});
	</script>
</html>
