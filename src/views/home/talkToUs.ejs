<section id="talkToUs">
  <div class="flex flex-col md:px-20">
    <div class="flex gap-2 reveal fade-right">
      <div class="bg-tertiary w-3"></div>
      <h1 class="font-semibold text-primary"><%- sectionList["TALK TO US"].title %></h1>
    </div>
    <div class="flex flex-col-reverse items-center md:items-start sm:flex-row gap-12 py-4 reveal fade-up with-delay">
      <div class="flex flex-col md:w-3/4 gap-8 px-4 md:px-0">
        <p><%- sectionList["TALK TO US"].content %></p>
        <div id="comment" class="flex flex-col items-center md:items-start lg:flex-row gap-8 lg:gap-0">
          <a href="<%= publicCommentMenu.url %>" class="flex items-center p-0">
            <div class="flex items-center justify-center w-16 h-16 bg-tertiary rounded-full text-white text-2xl p-0 border-8 border-white z-10">
              <i class="bi bi-chat-fill"></i>
            </div>
            <h5 class="bg-tertiary text-white py-2 px-12 rounded-md relative right-5"><%- publicCommentMenu.label %></h5>
          </a>
          <a href="<%= complaintMenu.url %>" class="flex items-center p-0">
            <div class="flex items-center justify-center w-16 h-16 bg-secondary rounded-full text-white text-2xl p-0 border-8 border-white z-10">
              <i class="bi bi-chat-left-text-fill"></i>
            </div>
            <h5 class="bg-secondary text-white py-2 px-12 rounded-md relative right-5"><%- complaintMenu.label %></h5>
          </a>
        </div>
      </div>
      <div class="w-full md:w-96">
        <img src="<%= sectionList['TALK TO US'].imageUrl %>" />
      </div>
    </div>
  </div>
</section>